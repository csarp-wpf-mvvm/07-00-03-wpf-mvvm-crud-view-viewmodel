<UserControl x:Class="Kreta.Desktop.Views.SchoolCitizens.TeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xwpftk="http://schemas.xceed.com/wpf/xaml/toolkit" 
             xmlns:local="clr-namespace:Kreta.Desktop.Views.SchoolCitizens"
             xmlns:viewmodel="clr-namespace:Kreta.Desktop.ViewModels.SchoolCitizens"
             d:DataContext="{d:DesignInstance Type=viewmodel:TeacherViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="White" />
            <Setter Property="Height" Value="700" />
            <Setter Property="Width" Value="900" />
        </Style>
    </d:DesignerProperties.DesignStyle>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">Tanár adatok</Label>
        <Label Grid.Row="2" Grid.Column="0">Vezeték név:</Label>
        <Label Grid.Row="3" Grid.Column="0">Kereszt név:</Label>
        <Label Grid.Row="4" Grid.Column="0">Osztályfőnök:</Label>
        <Label Grid.Row="5" Grid.Column="0">Osztály osztályfőnöke:</Label>
        <Label Grid.Row="6" Grid.Column="0">Születési dátuma:</Label>
        <Label Grid.Row="7" Grid.Column="0">Születés helye:</Label>
        <Label Grid.Row="8" Grid.Column="0">Nem:</Label>
        <Label Grid.Row="9" Grid.Column="0">Anyja neve:</Label>
        <StackPanel Orientation="Horizontal" Grid.Row="10" Grid.ColumnSpan="2" Margin="10 2 2 2">
            <!-- Gombok helye -->
            <Button  Margin="0 10 2 2" 
                 HorizontalAlignment="Right" 
                 MinWidth="80" 
                 Content="Új adat"
                 Command="{Binding DoNewStudentCommand}"
                 />
            <Button  Margin="0 10 2 2" 
                 HorizontalAlignment="Right" 
                 MinWidth="80" 
                 Content="Mentés"
                 Command="{Binding DoSaveCommand}"
                 CommandParameter="{Binding SelectedTeacher}"
                 />
            <Button  Margin="0 10 2 2"
                 HorizontalAlignment="Right"
                 MinWidth="80"
                 Content="Törlés"
                 Command="{Binding DoRemoveCommand}"
                 CommandParameter="{Binding SelectedTeacher}"
                 />
        </StackPanel>

        <TextBox Grid.Row="2" Grid.Column="1" Margin="2 2 2 2" Padding="0 2" Text="{Binding SelectedTeacher.LastName}"></TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="2 2 2 2" Padding="0 2" Text="{Binding SelectedTeacher.FirstName}"></TextBox>
        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding SelectedTeacher.IsHeadTeacher}" Margin="2 4"></CheckBox>
        <ComboBox Grid.Row="5" Grid.Column="1" Margin="2 2 2 2"></ComboBox>
        <DatePicker Grid.Row="6" Grid.Column="1" Margin="2 2 2 2" SelectedDate="{Binding SelectedTeacher.BirthDay}"></DatePicker>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="2 2 2 2" Padding="0 2" Text="{Binding SelectedTeacher.PlaceOfBirth}"></TextBox>
        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="1">
            <RadioButton GroupName="Gender" Margin="2 6 2 2" IsChecked="{Binding SelectedTeacher.IsWoman}">nő</RadioButton>
            <RadioButton GroupName="Gender" Margin="2 6 2 2" IsChecked="{Binding SelectedTeacher.IsMan, Mode=OneWay}" >férfi</RadioButton>
        </StackPanel>
        <TextBox Grid.Row="9" Grid.Column="1" Margin="2 2 2 2" Padding="0 2" Text="{Binding SelectedTeacher.MathersName}"></TextBox>
        <ListBox Grid.Row="11"
              Grid.ColumnSpan="2" 
              Margin="10 2 10 10"
              ItemsSource="{Binding Teachers}"
              SelectedItem="{Binding SelectedTeacher}"
    />
    </Grid>
</UserControl>
